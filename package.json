{
  "name": "api_client",
  "version": "0.0.0",
  "description": "Drupal API Client Monorepo",
  "main": "index.js",
  "scripts": {
    "dev:json-api-client": "pnpm --filter json-api-client-example dev",
    "check:types": "pnpm --filter './packages/**' check:types",
    "build:packages": "pnpm --filter './packages/**' build",
    "build:examples": "pnpm --filter './examples/**' build",
    "build:api-client": "pnpm --filter api-client build",
    "build:json-api-client": "pnpm --filter json-api-client build",
    "build:docs": "typedoc --plugin typedoc-plugin-mdn-links",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "eslint": "pnpm --filter './packages/**' eslint",
    "eslint:fix": "pnpm --filter './packages/**' eslint:fix",
    "test": "pnpm recursive test",
    "serve:docs": "pnpm build:docs && serve docs",
    "tsc": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "pnpm": {
    "overrides": {
      "@drupal/json-api-client": "workspace:*"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.0",
    "prettier": "3.0.1",
    "serve": "^14.2.0",
    "typedoc": "^0.24.8",
    "typedoc-plugin-mdn-links": "^3.0.3",
    "typescript": "^5.1.3",
    "vitest": "0.34.1"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.x"
  }
}
